#! /bin/bash

setmodmap () {
    [[ -e "$1" ]] && xmodmap "$1"
}

dvorak () {
    setxkbmap -layout us -variant dvp -option caps:swapescape
    setmodmap "${XDG_CONFIG_HOME}/.Xmodmap"
}

qwerty () {
    setxkbmap -layout latam -option caps:swapescape
}

case "$1" in
    "dvorak") dvorak ;;
    "qwerty") qwerty ;;
esac

xset r rate 200 40

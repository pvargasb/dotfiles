# Basic bindings

super + Return
    $TERMINAL

super + shift + Return
    $TERMINAL -c floating

super + e
    $TERMINAL -e $EDITOR

super + control + e
    code

super + i
    $TERMINAL -c floating -e $RESOURCES

super + shift + i
    $TERMINAL -c floating -e $GPU_RESOURCES

super + v
    $TERMINAL -c floating -e $FILE

super + p
    dmenu_run -i -c

super + n
    $BROWSER

super + shift + p
    $BROWSER --private-window

super + control + y
    setbg "$HOME/Wallpapers/" &

super + control + s
    pavucontrol

super + control + w
    $TERMINAL -e nmtui

super + control + r
    red_light

super + control + v
    virt-manager

super + control + m
    set_volume

super + x
    slock

super + shift + x
    slock & systemctl suspend

Print
    screenshot full-screen clipboard

shift + Print
    screenshot area

control + Print
    screenshot full-screen

alt + Print
    screenshot current-window

# Environment

super + b
    polybar-msg cmd toggle

ctrl + space
    dunstctl close

ctrl + shift + space
    dunstctl close-all

ctrl + period
    dunstctl history-pop

# Special byndings

XF86Calculator
    $TERMINAL -c floating -e python

XF86HomePage
    $BROWSER

XF86Mail
    $BROWSER https://www.outlook.com

XF86Tools
    start_spotify

XF86AudioMute
    change_volume toggle

XF86AudioLowerVolume
    change_volume down 1

XF86AudioRaiseVolume
    change_volume up 1

XF86AudioPlay
    playerctl play-pause

XF86AudioPause
    playerctl play-pause

XF86AudioStop
    playerctl stop

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

XF86MonBrightnessDown
    change_backlight down .5

XF86MonBrightnessUp
    change_backlight up .5

XF86TouchpadToggle
    toggle_touchpad

# Special fn bindings

super + {F1, control + ampersand}
    start_spotify

super + {F2, control + bracketleft}
    change_volume down 1

super + {F3, control + braceleft}
    change_volume up 1

super + {F4, control + braceright}
    change_volume toggle

super + {F5, control + parenleft}
    playerctl stop

super + {F6, control + equal}
    playerctl previous

super + {F7, control + asterisk}
    playerctl play-pause

super + {F8, control + parenright}
    playerctl next

super + {F12, control + numbersign}
    $TERMINAL -c floating -e python

# i3

super + {h, j, k, l}
    i3-msg focus {left, down, up, right}
